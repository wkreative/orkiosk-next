rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /comments/{commentId} {
      allow read: if true;
      allow create: if true; // Public can comment
      allow update, delete: if request.auth != null; // Only admin can delete/edit
    }
  }
}
